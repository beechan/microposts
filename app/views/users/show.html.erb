<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div>
          <%= gravatar_for @user %>
          <%= @user.name %>
          <%= @user.user_profile %>
          <%= @user.area %>
          <%= @user.name %>
          <%= link_to "Following",   followings_user_url %>
          <%= link_to "Follower",   followers_user_url %>
        </div>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
